@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Editar Avaliação";
}

<div class="row">
    <div class="col-12 col-lg-6 mx-auto">
        <div class="bg-black text-light rounded-4 p-4 mt-4 shadow">
            <h2 class="text-center mb-4">Editar Avaliação</h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AvaliacaoId" />
                <div class="mb-3">
                    <label asp-for="Nota" class="form-label"></label>
                    <input asp-for="Nota" class="form-control" />
                    <span asp-validation-for="Nota" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Comentario" class="form-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DataAvaliacao" class="form-label"></label>
                    <input asp-for="DataAvaliacao" class="form-control" />
                    <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LivroId" class="form-label"></label>
                    <select asp-for="LivroId" class="form-control" asp-items="ViewBag.LivroId"></select>
                    <span asp-validation-for="LivroId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UsuarioId" class="form-label"></label>
                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
