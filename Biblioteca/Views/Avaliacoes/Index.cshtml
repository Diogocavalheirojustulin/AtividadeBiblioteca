@model IEnumerable<Biblioteca.Models.Avaliacao>

@{
    ViewData["Title"] = "Avaliações";
}

<div class="row">
    <div class="col-12 col-lg-10 mx-auto">
        <div class="bg-black text-light rounded-4 p-4 mt-4 shadow">
            <h1 class="text-center mb-4">Minhas Avaliações</h1>

            <div class="mb-3 text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nova Avaliação
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle rounded-3 overflow-hidden">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nota)</th>
                            <th>@Html.DisplayNameFor(model => model.Comentario)</th>
                            <th>@Html.DisplayNameFor(model => model.DataAvaliacao)</th>
                            <th>@Html.DisplayNameFor(model => model.Livro)</th>
                            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                                <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                                <td>@item.DataAvaliacao.ToString("dd/MM/yyyy")</td>
                                <td>@item.Livro?.Titulo</td>
                                <td>@item.Usuario?.NomeCompleto</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.AvaliacaoId" class="btn btn-sm btn-primary me-1" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.AvaliacaoId" class="btn btn-sm btn-info me-1 text-white" title="Detalhes">
                                        <i class="bi bi-search"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.AvaliacaoId" class="btn btn-sm btn-danger" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
