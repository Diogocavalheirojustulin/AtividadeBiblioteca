@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Excluir Avaliação";
}

<div class="row">
    <div class="col-12 col-lg-6 mx-auto">
        <div class="bg-black text-light rounded-4 p-4 mt-4 shadow">
            <h2 class="text-center mb-4">Excluir Avaliação</h2>
            <h5 class="text-danger text-center mb-4">Tem certeza que deseja excluir esta avaliação?</h5>
            <dl class="row">
                <dt class="col-sm-4">Nota</dt>
                <dd class="col-sm-8">@Model.Nota</dd>
                <dt class="col-sm-4">Comentário</dt>
                <dd class="col-sm-8">@Model.Comentario</dd>
                <dt class="col-sm-4">Data Avaliação</dt>
                <dd class="col-sm-8">@Model.DataAvaliacao.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-4">Livro</dt>
                <dd class="col-sm-8">@Model.Livro?.Titulo</dd>
                <dt class="col-sm-4">Usuário</dt>
                <dd class="col-sm-8">@Model.Usuario?.NomeCompleto</dd>
            </dl>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="AvaliacaoId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
