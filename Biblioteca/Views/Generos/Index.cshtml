@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<div class="container mt-4">
    <h1 class="mb-4">Gêneros</h1>
    <a asp-action="Create" class="btn btn-success mb-3">Novo Gênero</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th style="width:180px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-danger btn-sm ms-2">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
