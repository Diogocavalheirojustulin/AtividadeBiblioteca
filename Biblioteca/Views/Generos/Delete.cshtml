@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Excluir Gênero</h1>
    <div class="alert alert-warning">
        Tem certeza que deseja excluir o gênero <strong>@Model.Nome</strong>?
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="GeneroId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
