@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Editar Gênero";
}

<div class="container mt-4">
    <h1 class="mb-4">Editar Gênero</h1>
    <form asp-action="Edit" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="GeneroId" />
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </form>
</div>
